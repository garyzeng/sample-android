<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_rec"/>
    
    <Button android:id="@+id/btn_rec" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:text="@string/btn_val"/>
    
    <Button android:id="@+id/btn_new" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:text="@string/btn_start_new"/>

</LinearLayout>
